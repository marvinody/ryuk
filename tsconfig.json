{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "src",
    "esModuleInterop": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "test/**/*.ts"
  ]
}
